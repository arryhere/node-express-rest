{
  "name": "node-express-rest",
  "version": "1.0.0",
  "type": "module",
  "license": "UNLICENSED",
  "private": true,
  "author": "Arijit Das <arijit@itobuz.com>",
  "description": "",
  "main": "./src/main.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
  
    "start:dev": "tsx watch --include ./src ./src/main.ts",
    "start:esbuild": "npm run build:esbuild && node ./dist/index.cjs",
    "start:ncc": "npm run build:ncc && node ./dist/index.js",
  
    "build:swc": "npm run clean && npm run pre-commit && swc ./src -d ./dist --strip-leading-paths",
    "build:esbuild": "npm run clean && node ./esbuild.js",
    "build:ncc": "npm run clean && npm run pre-commit && ncc build ./src/main.ts -o ./dist -m -C",

    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src && biome check --write ./src",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run format && npm run lint && npm run type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.9",
    "@swc/helpers": "^0.5.15",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.10.10",
    "@types/node-schedule": "^2.1.7",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "@vercel/ncc": "^0.38.3",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.4",
    "nodemailer": "^6.10.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  }
}
